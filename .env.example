# Cloud Refactor Agent Configuration

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Storage Paths
CODEBASE_STORAGE_PATH=/tmp/codebases
PLAN_STORAGE_PATH=/tmp/plans
BACKUP_STORAGE_PATH=/tmp/refactor_backups
MEMORY_STORAGE_PATH=/tmp/memory_module

# LLM Provider Configuration - Gemini
LLM_PROVIDER=gemini
GEMINI_API_KEY=your_gemini_api_key_here

# Google Cloud Configuration
GCP_PROJECT_ID=mediahouse-478804
GCP_REGION=asia-south1  # Mumbai

# Test Runner Configuration
TEST_RUNNER=pytest  # Options: pytest, unittest, mock
TEST_TIMEOUT=300  # seconds

# Logging
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR
LOG_FILE=cloud_refactor_agent.log

# Frontend Configuration
REACT_APP_API_BASE_URL=http://localhost:8000

# Security
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
SECRET_KEY=your_secret_key_here_change_in_production
